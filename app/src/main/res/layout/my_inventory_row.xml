<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainInventoryLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/inventory_item_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/inventory_item_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/inventory_item_id_txt"
                app:layout_constraintTop_toTopOf="@+id/inventory_item_id_txt" />

            <TextView
                android:id="@+id/inventory_item_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                app:layout_constraintStart_toStartOf="@+id/inventory_item_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/inventory_item_name_txt" />

            <TextView
                android:id="@+id/inventory_item_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                app:layout_constraintStart_toStartOf="@+id/inventory_item_date_txt"
                app:layout_constraintTop_toBottomOf="@+id/inventory_item_date_txt" />

            <TextView
                android:id="@+id/inventory_item_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/inventory_item_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                tools:layout_editor_absoluteX="290dp"
                tools:layout_editor_absoluteY="2dp"
                app:layout_constraintStart_toStartOf="@+id/inventory_item_price_txt"
                app:layout_constraintTop_toBottomOf="@+id/inventory_item_price_txt"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>