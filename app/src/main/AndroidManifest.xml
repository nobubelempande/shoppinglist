<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viiishoppinglistapp.doit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TabbedHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_tabbed_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbedInventoryActivity"
            android:exported="false"
            android:label="@string/title_activity_tabs_use_shopping_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".AddShoppingListItemsActivity"
            android:exported="false" />
        <activity
            android:name=".UseShoppingListActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>