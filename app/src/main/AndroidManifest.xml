<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viiishoppinglistapp.doit">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light">
        <activity
            android:name=".Activities.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.TabbedHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_tabbed_home" />
        <activity
            android:name=".Activities.TabbedInventoryActivity"
            android:exported="false"
            android:label="@string/title_activity_tabs_use_shopping_list" />
        <activity
            android:name=".Activities.AddShoppingListItemsActivity"
            android:exported="false" />
        <activity
            android:name=".ShoppingListReminder"
            android:exported="false" />
        <activity
            android:name=".Activities.UseShoppingListActivity"
            android:exported="false" />
        <activity android:name=".Activities.ItemCategoryActivity"
            android:exported="false"/>
        <activity android:name=".Activities.BarChartActivity"
            android:exported="false"/>
        <activity android:name=".Activities.PieChartActivity"
            android:exported="false"/>

        <activity android:name=".Activities.ReminderActivity" />
        <activity android:name=".Activities.ReminderMain"/>
        <receiver android:name=".Activities.AlarmBrodcast" />

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>